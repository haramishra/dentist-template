---
import { Button, buttonVariants } from "@/components/ui/button";
import { ArrowRight } from "lucide-react";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import { cn } from "@/lib/utils";

interface Props {
  heading: string;
  title: string;
  details: string;
  cta: string;
  ctaLink: string;
  image: ImageMetadata;
  alt: string;
  reverse: boolean;
}

const {
  heading,
  title,
  details,
  cta,
  ctaLink,
  image,
  alt,
  reverse = false,
} = Astro.props;
---

<section class="">
  <div
    class={cn(
      "flex flex-col items-center gap-x-20 gap-y-6 md:flex-row",
      reverse && "md:flex-row-reverse"
    )}
  >
    <div class="bg-muted border-border/50 w-full basis-1/2 rounded-xl border">
      <Image
        src={image}
        alt={alt || title}
        class="h-full w-full rounded-xl object-cover"
      />
    </div>
    <div class="shrink-0 basis-1/2">
      <span class="text-muted-foreground text-sm font-semibold uppercase">
        {heading}
      </span>
      <h3 class="heading-3 my-3">
        {title}
      </h3>
      <p class="text-muted-foreground text-[17px]">
        {details}
      </p>

      <div class="mt-6">
        <a href={ctaLink} class={buttonVariants({ variant: "default" })}>
          {cta}
        </a>
      </div>
    </div>
  </div>
</section>
